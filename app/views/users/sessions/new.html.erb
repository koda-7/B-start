<h2>ログイン</h2>

<%= form_with model:@user, url: user_registration, local: true do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    メールアドレス
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    パスワード
    <%= f.password_field :password %>
  </div>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
