<h2>新規登録</h2>

<%= form_with model:@user, url: user_registration_path , local: true do |f| %>
   <%= render "devise/shared/error_messages", resource: resource %>  

  <div class="field">
    ニックネーム
    <%= f.text_field :nickname %>
  </div>

  <div class="field">
    メールアドレス
    <%= f.email_field :email, autofocus: true, placeholder:"PC・携帯どちらでも可" %>
  </div>

  <div class="field">
    パスワード
    <%= f.password_field :password, placeholder:"6文字以上の半角英数字", autofocus: true %>
  </div>

  <div class="field">
    パスワード（確認）
    <%= f.password_field :password_confirmation, placeholder:"同じパスワードを入力" %>
  </div>

  <div class="field">
    プロフィール
    <%= f.text_field :profile %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

